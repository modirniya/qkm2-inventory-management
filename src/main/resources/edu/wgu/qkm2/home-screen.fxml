<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wgu.qkm2.controller.HomeController">
    <Label layoutX="461.5" layoutY="19.5" text="Inventory Management System" AnchorPane.leftAnchor="16.0"
           AnchorPane.topAnchor="16.0">
        <font>
            <Font name="System Bold" size="16.0"/>
        </font>
    </Label>
    <Button layoutX="523.5" layoutY="350.0" mnemonicParsing="false" onAction="#exit" text="Exit"
            AnchorPane.rightAnchor="12.0" AnchorPane.topAnchor="12.0"/>
    <SplitPane dividerPositions="0.5" layoutX="20.0" layoutY="80.5" prefHeight="250.0" prefWidth="200.0"
               AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="8.0"
               AnchorPane.topAnchor="50.0">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <TableView fx:id="tvParts" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="48.0"
                       AnchorPane.leftAnchor="4.0" AnchorPane.rightAnchor="4.0" AnchorPane.topAnchor="48.0">
                <columns>
                    <TableColumn editable="false" prefWidth="50.0" text="ID">
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" prefWidth="150.0" text="Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" prefWidth="100.0" text="Inventory Level">
                        <cellValueFactory>
                            <PropertyValueFactory property="stock"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" prefWidth="150.0" text="Price / Cost per Unit">
                        <cellValueFactory>
                            <PropertyValueFactory property="price"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <Label text="Parts" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="12.0">
                <font>
                    <Font name="System Bold" size="13.0"/>
                </font>
            </Label>
            <TextField fx:id="tfSearchPart" prefWidth="200.0" promptText="Search by Part ID or Name"
                       AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="8.0"/>
            <HBox prefHeight="40.0" spacing="12.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="16.0" AnchorPane.rightAnchor="16.0">
                <Button maxWidth="1000.0" mnemonicParsing="false" onAction="#removePart" text="Remove"
                        HBox.hgrow="ALWAYS"/>
                <Button maxWidth="1000.0" mnemonicParsing="false" onAction="#modifyPart" text="Modify"
                        HBox.hgrow="ALWAYS"/>
                <Button maxWidth="1000.0" mnemonicParsing="false" onAction="#addPart" text="Add"
                        HBox.hgrow="ALWAYS"/>
            </HBox>
        </AnchorPane>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <TableView fx:id="tvProducts" prefHeight="200.0" prefWidth="200.0"
                       AnchorPane.bottomAnchor="48.0" AnchorPane.leftAnchor="4.0"
                       AnchorPane.rightAnchor="4.0" AnchorPane.topAnchor="48.0">
                <columns>
                    <TableColumn editable="false" prefWidth="50.0" text="ID">
                        <cellValueFactory>
                            <PropertyValueFactory property="id"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" prefWidth="150.0" text="Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" prefWidth="100.0" text="Inventory Level">
                        <cellValueFactory>
                            <PropertyValueFactory property="stock"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn editable="false" prefWidth="150.0" text="Price / Cost per Unit">
                        <cellValueFactory>
                            <PropertyValueFactory property="price"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <Label text="Products" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="12.0">
                <font>
                    <Font name="System Bold" size="13.0"/>
                </font>
            </Label>
            <TextField fx:id="tfSearchProduct" prefWidth="200.0" promptText="Search by Product ID or Name"
                       AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="8.0"/>
            <HBox prefHeight="40.0" spacing="12.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="16.0" AnchorPane.rightAnchor="16.0">
                <Button maxWidth="1000.0" mnemonicParsing="false" onAction="#removeProduct"
                        text="Remove" HBox.hgrow="ALWAYS"/>
                <Button maxWidth="1000.0" mnemonicParsing="false" onAction="#modifyProduct"
                        text="Modify" HBox.hgrow="ALWAYS"/>
                <Button maxWidth="1000.0" mnemonicParsing="false" onAction="#addProduct" text="Add"
                        HBox.hgrow="ALWAYS"/>
            </HBox>
        </AnchorPane>
    </SplitPane>
</AnchorPane>
